<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/startButton"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#ac00e6"
        android:onClick="start"
        android:padding="60dp"
        android:text="Go!"
        android:textSize="50sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <TextView
            android:id="@+id/timertextView"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:background="#4dff4d"
            android:text="@string/_30s"
            android:textSize="35sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/scoretextView"
            android:layout_width="110dp"
            android:layout_height="47dp"
            android:background="#3385ff"
            android:text="@string/_0_15"
            android:textSize="35sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.v7.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="317dp"
            android:layout_height="252dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.407">

            <Button
                android:id="@+id/button0"
                android:layout_width="155dp"
                android:layout_height="124dp"
                android:backgroundTint="#e62e00"
                android:onClick="chooseAnswer"
                android:shadowColor="@android:color/holo_blue_bright"
                android:tag="2"
                android:text="@string/button"
                android:textColor="@android:color/holo_blue_bright"
                android:visibility="visible"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_row="0" />

            <Button
                android:id="@+id/button3"
                android:layout_width="155dp"
                android:layout_height="124dp"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:onClick="chooseAnswer"
                android:shadowColor="@android:color/holo_blue_bright"
                android:tag="3"
                android:text="Button"
                android:textColor="@android:color/holo_blue_bright"
                android:visibility="visible"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="1" />

            <Button
                android:id="@+id/button1"
                android:layout_width="155dp"
                android:layout_height="124dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:onClick="chooseAnswer"
                android:shadowColor="@android:color/holo_blue_bright"
                android:tag="1"
                android:text="Button"
                android:textColor="@android:color/holo_blue_bright"
                android:visibility="visible"
                app:layout_column="1"
                app:layout_gravity="fill"
                app:layout_row="0" />

            <Button
                android:id="@+id/button2"
                android:layout_width="155dp"
                android:layout_height="124dp"
                android:backgroundTint="@android:color/holo_orange_light"
                android:onClick="chooseAnswer"
                android:shadowColor="@android:color/holo_blue_bright"
                android:tag="2"
                android:text="Button"
                android:textColor="@android:color/holo_blue_bright"
                android:visibility="visible"
                app:layout_column="0"
                app:layout_gravity="fill"
                app:layout_row="1" />
        </android.support.v7.widget.GridLayout>

